#!/bin/bash

#/ Usage: script/sync-branches
#/ Sync testnet and sandbox branch with main branch.

echo "Syncing testnet branch with main branch ðŸ”„"
git pull origin main
git checkout testnet
git merge main
git push origin testnet
git checkout main
echo "Syncing staging branch with main branch ðŸ”„"
git pull origin main
git checkout staging
git merge main
git push origin staging
git checkout main
echo "Syncing sandbox branch with main branch ðŸ”„"
git pull origin main >> /dev/null
git checkout sandbox
git merge main
git push origin sandbox
git checkout main
echo "Syncing staging-sandbox branch with main branch ðŸ”„"
git pull origin main >> /dev/null
git checkout staging-sandbox
git merge main
git push origin staging-sandbox
git checkout main
echo "Branches synced ðŸŽ‰"
